{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "emitDeclarationOnly": false,
    "resolveJsonModule": true,
    "outDir": "dist",
  },
  "include": ["src/*.tsx", "src/*.ts"],
  "exclude": ["node_modules"]
}
